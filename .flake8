[flake8]
max-line-length = 120
exclude = venv, .git, __pycache__, .tox, .eggs, *.egg, .venv, build, dist
ignore = E203, W503, E501
# E203: whitespace before ':'
# W503: line break before binary operator
# E501: line too long (handled by black)
per-file-ignores =
    # F401: imported but unused
    __init__.py: F401
max-complexity = 10
statistics = True
count = True 